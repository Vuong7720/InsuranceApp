@inherits LayoutComponentBase


<FluentLayout>
    <FluentHeader>
        <h3>Hệ thống Bảo Hiểm Xe Máy</h3>
        <FluentSpacer />
        </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="250" Collapsible="true">
            <FluentNavLink Href="/" Icon="@(new Icons.Regular.Size20.Home())">Trang chủ</FluentNavLink>
            <FluentNavLink Href="/create-policy" Icon="@(new Icons.Regular.Size20.DocumentAdd())">Tạo đơn mới</FluentNavLink>
            <FluentNavLink Href="/customers" Icon="@(new Icons.Regular.Size20.People())">Khách hàng</FluentNavLink>
            
            <AuthorizeView Roles="Admin">
                <FluentNavLink Href="/admin/users" Icon="@(new Icons.Regular.Size20.PersonLock())">Quản lý User</FluentNavLink>
            </AuthorizeView>
        </FluentNavMenu>

        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>